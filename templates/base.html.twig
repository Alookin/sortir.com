<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    <header>
        <nav>
            <a href="{{ path('main_home') }}" title="sortir.com">Sortir.com</a>
            <a href="{{ path('app_register') }}" title="inscription">inscription</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('admin_villes') }}" title="Gerer les villes">Villes</a>
                <a href="{{ path('admin_campus') }}" title="Gerer les campus">Campus</a>
            {% endif %}
            {% if app.user %}
                <a href="{{ path('profil', {'id' : app.user.id }) }}" title="Consulter mon profil">Mon Profil</a>
                <a href="{{ path('app_logout') }}" title="LogOut">Se déconnecter • {{ app.user.prenom }}</a>
            {% endif %}

        </nav>
    </header>
        {% block body %}{% endblock %}
    </body>
</html>
